<RegistroScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        Label:
            text: "REGISTRO DE USUARIO"
            font_size: 28
            bold: True
            size_hint_y: 0.2

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.6
            spacing: 10
            padding: [50, 0]

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.2
                spacing: 10

                Label:
                    text: "Nombre de usuario:"
                    size_hint_x: 0.4
                    halign: "right"
                    text_size: self.size

                TextInput:
                    id: usuario_input
                    hint_text: "Ingrese su nombre de usuario"
                    multiline: False
                    size_hint_x: 0.6

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.2
                spacing: 10

                Label:
                    text: "Contraseña:"
                    size_hint_x: 0.4
                    halign: "right"
                    text_size: self.size

                TextInput:
                    id: contraseña_input
                    hint_text: "Ingrese su contraseña"
                    password: True
                    multiline: False
                    size_hint_x: 0.6

            Label:
                text: root.mensaje
                size_hint_y: 0.2
                color: (0, 1, 0, 1) if "✅" in self.text else (1, 0, 0, 1)

            Button:
                text: "Registrarse"
                size_hint_y: 0.2
                on_release: root.registrar()

        Button:
            text: "Volver al Menú"
            size_hint_y: 0.1
            on_release: root.volver()
