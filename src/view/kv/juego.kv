<JuegoScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Juego de Batalla Naval"
            font_size: 24
            size_hint_y: 0.1

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.8
            spacing: 10

            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                spacing: 10
                padding: 10

                Label:
                    text: "Configuración"
                    font_size: 18
                    size_hint_y: 0.1

                GridLayout:
                    cols: 2
                    spacing: 5
                    size_hint_y: 0.3

                    Label:
                        text: "Ancho:"
                    TextInput:
                        id: ancho_input
                        text: "10"
                        multiline: False
                        input_filter: "int"

                    Label:
                        text: "Alto:"
                    TextInput:
                        id: alto_input
                        text: "10"
                        multiline: False
                        input_filter: "int"

                    Label:
                        text: "Naves:"
                    TextInput:
                        id: naves_input
                        text: "5"
                        multiline: False
                        input_filter: "int"

                Button:
                    text: "Iniciar Juego"
                    size_hint_y: 0.1
                    on_release: root.iniciar_juego()

                Label:
                    text: "Disparar"
                    font_size: 18
                    size_hint_y: 0.1

                GridLayout:
                    cols: 2
                    spacing: 5
                    size_hint_y: 0.2

                    Label:
                        text: "Fila:"
                    TextInput:
                        id: fila_input
                        hint_text: "0-9"
                        multiline: False
                        input_filter: "int"

                    Label:
                        text: "Columna:"
                    TextInput:
                        id: columna_input
                        hint_text: "0-9"
                        multiline: False
                        input_filter: "int"

                Button:
                    text: "Realizar Disparo"
                    size_hint_y: 0.1
                    on_release: root.realizar_disparo()

                Button:
                    text: "Reiniciar Juego"
                    size_hint_y: 0.1
                    on_release: root.reiniciar_juego()

                Button:
                    text: "Volver al Menú"
                    size_hint_y: 0.1
                    on_release: root.volver()

            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.6
                spacing: 10
                padding: 10

                Label:
                    text: "Tablero de Juego"
                    font_size: 18
                    size_hint_y: 0.1

                Label:
                    text: root.tablero_texto
                    size_hint_y: 0.6
                    text_size: self.width, None
                    halign: 'left'
                    valign: 'top'
                    font_size: 14
                    font_name: 'RobotoMono-Regular'

                Label:
                    text: root.estado_juego
                    size_hint_y: 0.1
                    font_size: 14

                Label:
                    text: root.mensaje
                    size_hint_y: 0.1
                    font_size: 14

        Button:
            text: "Volver al Menú"
            size_hint_y: 0.1
            on_release: root.volver()
